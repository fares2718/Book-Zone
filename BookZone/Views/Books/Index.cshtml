@using BookZone.Settings
@model IEnumerable<Book>
@{
	ViewData["Title"] = "Books";
}

<a class="btn btn-secondary btn-lg" asp-action="Creat">
	<i class="bi bi-plus-circle-dotted"></i>
	Add Book
</a>

@if(!Model.Any())
{
    <div class="alert alert-warning mt-5">
    <h4 class="alert-heading">No Books!</h4>
    <p class="mb-0">No Books were added yet.</p>
</div>    
}
else
{
	<div class="mt-5">
		<table class="table table-bordered border-primary">
			<tbody>
				@foreach(var book in Model)
				{
					<tr class="border-1 border-success">
						<td>
							<div class="d-flex">
								<div class="pe-4">
									<img src="@($"{FileSettings.ImagesPath}/{book.Cover}")" alt="@book.Name" style="max-width:90px;" />
								</div>
								<div class="d-flex flex-column justify-content-center">
									<h4 class="text-light">@book.Name</h4>
									<h5>@book.Category.Name</h5>
								</div>
							</div>
						</td>
						<td class="align-middle">
							<div class="d-flex justify-content-end">
								<a href="#" class="btn btn-info rounded rounded-3 me-2">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<a href="#" class="btn btn-danger rounded rounded-3">
									<i class="bi bi-trash3"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}