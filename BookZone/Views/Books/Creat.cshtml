@using BookZone.Settings
@model CreatBookViewModel

@{
	ViewData["Title"] = "Add Book";
}

<h5>
	<i class="bi bi-plus-circle-dotted"></i>
	Add a new book
</h5>

<form asp-controller="Books" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-6">
			<div>
				<label asp-for="Name" class="form-label mt-4"></label>
				<input type="text" class="form-control" asp-for="Name" placeholder="Enter name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="AuthorName" class="form-label mt-4"></label>
				<input type="text" class="form-control" asp-for="AuthorName" placeholder="Enter author name">
				<span asp-validation-for="AuthorName" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="CategoryId" class="form-label mt-4"></label>
				<select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
				data-placeholder="Select a category" data-minimum-result-for-search="Infinity">
					<option value=""></option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="SelectedLanguages" class="form-label mt-4"></label>
				<select multiple="" class="form-select" asp-for="SelectedLanguages" asp-items="Model.Languages"
				data-placeholder="Select a category" data-minimum-result-for-search="Infinity">
					<option></option>
				</select>
				<span asp-validation-for="SelectedLanguages" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Description" class="form-label mt-4"></label>
				<textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Cover" class="form-label mt-4"></label>
				<input class="form-control" type="file" asp-for="Cover"
				data-rule-extention="@FileSettings.AllowedExtentions.Replace(".",string.Empty)"
					   data-msg-extention="Not allowed extention"
				data-rule-filesize="@FileSettings.MaxSizeinB"
				data-msg-filesize="Maximum allowed size is @FileSettings.MaxSizeinMB MB">
				<small class="form-text text-muted">Only @FileSettings.AllowedExtentions are allowed 
					with Max size of @FileSettings.MaxSizeinMB MB </small>
				<span asp-validation-for="Cover" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-light text-black mt-4">Save</button>
		</div>
		<div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
			<img class="cover-preview d-none" alt="Cover"/>
		</div>
	</div>
</form>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/file-size-validator.js" asp-append-version="true"></script>
	<script src="~/js/book-form.js" asp-append-version="true"></script>
}

