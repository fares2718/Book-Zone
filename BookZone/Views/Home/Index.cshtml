@using BookZone.Settings
@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";
}

@if(!Model.Any())
{
    <div class="alert alert-warning mt-5">
    <h4 class="alert-heading">No Books!</h4>
    <p class="mb-0">No Books were added yet.</p>
</div>    
}
else 
{
    <div class="row mt-5">
        @foreach(var book in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card border-success mb-3" style="max-width: 20rem;">
                    <div class="card-body" style="background-image:url(@($"{FileSettings.ImagesPath}/{book.Cover}")); background-size:cover;background-position:center; height:400px;">
                        <div class="h-100 d-flex align-items-end">
                            <span class="badge bg-secondary rounded-0 fs-3">@book.Category?.Name</span>
                        </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>@book.Name</h5>
                        <div>
                            @foreach(var language in book.languges)
                            {
                                <i class="@language.Languge.Icon me-2 fs-4"></i>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

